<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login e Registro</title>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        
                        <!-- Adiciona classes para espaçamento -->
                        <h6 class="mb-0 pb-3">
                            <span class="tab">Login</span>
                            <span class="tab">Registrar</span>
                        </h6>

                        <!-- Checkbox para alternar entre Login e Registrar -->
                        <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
                        <label for="reg-log"></label> <!-- Rótulo clicável -->

                        <!-- Cartão 3D -->
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                
                                <!-- Tela de Login -->
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <form action="/login" method="post">
                                            <h4 class="mb-4 pb-3">LOGIN</h4>
                                            <div class="form-group">
                                                <input type="email" name="email"  class="form-style" placeholder="E-mail">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" name="senha" class="form-style" placeholder="Senha">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <center><input type="submit" value="Entrar" class="button"></center>
                                            <p class="mb-0 mt-4 text-center">
                                                <a href="#" class="link">Esqueceu sua senha?</a>
                                            </p>
                                        </form>
                                    </div>
                                </div>

                                <!-- Tela de Registro -->
                                <div class="card-back">
                                    <div class="center-wrap">
                                        <form action="/cadastrar" method="post">
                                            <h4 class="mb-3 pb-3">REGISTRA-SE</h4>
                                            <div class="form-group">
                                                <input type="text" name="nome"  class="form-style" placeholder="Seu Nome">
                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="email" name="email" class="form-style" placeholder="E-mail">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password"  name="senha" class="form-style" placeholder="Senha">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <center><input type="submit" value="Entrar" class="button"></center>
                                        </form>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
